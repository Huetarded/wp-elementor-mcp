# WordPress Connection Configuration
# Copy this file to .env and fill in your actual values

# Your WordPress site URL (without trailing slash)
WORDPRESS_BASE_URL=https://your-site.com

# WordPress username with appropriate permissions
WORDPRESS_USERNAME=your-username

# WordPress Application Password (NOT your regular password)
# Generate this in WordPress Admin → Users → Your Profile → Application Passwords
WORDPRESS_APPLICATION_PASSWORD=your-app-password

# Optional: Test specific post/page IDs (for debugging)
TEST_POST_ID=123
TEST_PAGE_ID=456

# Optional: Enable additional debugging
DEBUG_MODE=true
VERBOSE_LOGGING=true